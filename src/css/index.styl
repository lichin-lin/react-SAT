@import url(http://fonts.googleapis.com/earlyaccess/notosanstc.css)
@import url('https://fonts.googleapis.com/css?family=Open+Sans')
$black = #50514F
$blue = #D8EAF9
$white = #F0F0F0
$fb_color = rgba(#3b5998, 0.8)
$bg-color= #ff8888 //start color
$stops= 100 //smoothness
$time= 20s //duration of animation
$hue-range= 20 //of 360deg
animation_bg()
  background: linear-gradient(230deg,#6a67ce, #6a67ce, #6a67ce, #fc636b, #ffb900, #53d769, #53d769, #53d769) //, #ffdd00
  background-size: 1000% 1000%

  -webkit-animation: AnimationName 35s ease infinite;
  -moz-animation: AnimationName 35s ease infinite;
  animation: AnimationName 35s ease infinite;

  @-webkit-keyframes AnimationName {
      0%{background-position:0% 2.5%}
      50%{background-position:100% 97.5%}
      100%{background-position:0% 2.5%}
  }
  @-moz-keyframes AnimationName {
      0%{background-position:0% 2.5%}
      50%{background-position:100% 97.5%}
      100%{background-position:0% 2.5%}
  }
  @keyframes AnimationName {
      0%{background-position:0% 2.5%}
      50%{background-position:100% 97.5%}
      100%{background-position:0% 2.5%}
  }

*
  font-family 'Noto Sans TC', sans-serif
h1.not_login_logo
  color $white !important
body
    margin 0px
    background-color $blue
    font-family 'Open Sans', sans-serif
    #app
      background-color $blue
      color $black
      h1
        font-size 36px
      .control-label
        font-size 24px
        font-weight 100
      .form-control
        height 50px
        color $black
        font-size 20px
        background transparent
        border-color darken($blue, 20%)
        border-width 2px

    .testFunction
      button
        padding 5px 10px
        margin 0 10px
        font-size 16px
        background $blue
        color $black
        border 2px solid $black
        border-radius 2.5px

h1
  color $black
  font-weight 400
  font-size 3em !important

h2
  color $black
  font-weight 400
  font-size 2.5em !important
  position relative
  padding-bottom 20px
  &:after
    content ""
    width 50px
    height 5px
    background-color $black
    border-radius 1px
    position absolute
    bottom 10px
    left 0

.sat_btn
  color $black
  font-size 1.25em
  font-weight 400
  border 2px solid rgba(80,80,80, 0.75)
  border-radius 2.5px
  padding 5px 10px
  margin 10px 10px 0 0
  background transparent

.fb_btn
  color $fb_color
  border-color $fb_color

.not_login
  width 100vw
  height 100vh
  animation_bg()
  position absolute
  top 0
  left 0
  z-index 9999
  display flex
  flex-direction column
  justify-content center
  align-items center
  .not_login_title
    text-align center
    position absolute
    bottom 10px
    left 0px
    width 100%
    color $white !important
    p
      letter-spacing 2px
      color $white !important
  .not_login_section
    max-width 480px
    text-align center
    position relative
    p
      color $white
      font-size 1.5em


.info_section
  margin 20px 0
  padding 0 20px
  .info_content
    letter-spacing 2px
    font-size 1.5em
    color $black
    .web
      margin-right 10px
    .star
      color rgba(#fcb314, 0.75)
    a
      color $black
      position relative
      text-decoration none
      font-size 0.75em
      cursor pointer
      &:after
        content ""
        width 100%
        height 5px
        background-color rgba($fb_color, 0.35)
        border-radius 1px
        position absolute
        bottom 0px
        left 0
